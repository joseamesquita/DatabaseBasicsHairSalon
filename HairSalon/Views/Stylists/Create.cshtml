@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="text-center">
        <h2>Add Stylist</h2>
        @using (Html.BeginForm())
        {
          <div class="form-group">
            @Html.LabelFor(model => model.StylistName)
            @Html.TextBoxFor(model => model.StylistName)
            <br>
            @Html.LabelFor(model => model.HireDate)
            @Html.TextBoxFor(model => model.HireDate)
          </div>  
          <button type="submit" class="btn btn-info">Add</button>
        }
        <br>
        <button>@Html.ActionLink("View Stylists", "Index")</button>
</div>